<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#999999"
                android:startColor="#BBBBBB"
                android:angle="270" />
            <corners
                android:radius="1dp" />
            <stroke
                android:width="1dp"
                android:color="#99D9EA" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#999999"
                android:startColor="#BBBBBB"
                android:angle="270" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>
</selector>