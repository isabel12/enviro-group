<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AABED9"
    android:padding="5dip">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Points This Week"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:layout_marginBottom="10dip"
	    android:background="@android:color/darker_gray"/>
    
    
    <LinearLayout android:id="@+id/current_points_button_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dip">
        
           
    </LinearLayout>
    
    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Record New Task" 
        android:layout_marginBottom="10dip"
        android:onClick="recordNewTask"
        android:background="@drawable/custom_button"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Activity"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"/>
    
    
    <ListView android:id="@+id/recent_activity_list" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	/>
    
</LinearLayout>