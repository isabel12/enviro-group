<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#AABED9"
    android:padding="20dip">

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">   
    	
        <Button
	        android:id="@+id/total_week_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="Week" 
	        android:onClick="changeTotalToWeekView"/>
        
        <Button
	        android:id="@+id/total_month_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="Month" 
	        android:onClick="changeTotalToMonthView"/>
        
        <Button
	        android:id="@+id/total_month_3_button"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:text="3 Month" 
	        android:onClick="changeTotalTo3MonthView"/>     
    </LinearLayout>

    <TextView
        android:id="@+id/total_graph_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly points"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/total_graph_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/week_total" />
    
</LinearLayout>