<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select an Activity:" />
    
    <Spinner
        android:id="@+id/activities_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/task_quantity_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Task:" />
    
    <EditText android:id="@+id/task_quantity_edit_text" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity" />
    
    <TextView
        android:id="@+id/task_points_value_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        
    
    <Button android:id="@+id/record_task_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Record"
        android:onClick="recordActivity"
        />

</LinearLayout>